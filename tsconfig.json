{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["DOM", "ES2021"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "paths": {
      "@features/*": ["./src/features/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@screens/*": ["./src/screens/*"],
      "@ui/*": ["./src/ui/*"]
    }
  },
  "include": ["src"]
}
