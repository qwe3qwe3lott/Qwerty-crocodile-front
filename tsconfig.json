{
  "compilerOptions": {
    "target": "ES2021",
    "lib": [
      "DOM",
      "ES2021"
    ],
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "paths": {
      "@auth/*": [
        "./src/auth/*"
      ],
      "@common/*": [
        "./src/common/*"
      ],
      "@crocodile/*": [
        "./src/crocodile/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}
