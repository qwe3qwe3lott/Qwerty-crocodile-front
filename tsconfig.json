{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["DOM", "ES2021"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "paths": {
      "@auth/*": ["./src/auth/*"],
      "@crocodile/*": ["./src/crocodile/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@ui/*": ["./src/ui/*"]
    }
  },
  "include": ["src"]
}
